<div class="row">
<div class="col-md-6 col-md-offset-4">

<h3>Room Reservation: </h3>

<%= form_for @reservation, :html => {:class => "form-horizontal"} do |f| %>
  <ul>
    <% @reservation.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>

   CheckIn Date: <%= f.text_field :checkin_at, 'data-behaviour' => 'datepicker'%><br /><br />
  

    Checkout Date: <%= f.text_field :checkout_at, 'data-behaviour' => 'datepicker'%><br /><br />

    Category: <%= select_tag(:category, options_for_select(["Deluxe Rooms", "Luxury Rooms", " Luxury Suites", "Presidential Suites"]))%></br><br />

  <%= f.submit "Reserve Room", class: "btn btn-default btn-primary" %>
  <%= link_to 'View all reservations', reservations_path, class: "btn btn-default btn-default"  %>
<%end%>
</br>

</div>
</div>

<%= render 'rooms.html.erb' %>


<script type="text/javascript">
  $('[data-behaviour~=datepicker]').datepicker({
    format: 'yyyy-mm-dd'
  });
</script>

